set relativenumber
set number
set tabstop=4
set softtabstop=4
set colorcolumn=80
set backspace=2
set shiftwidth=4
set expandtab
set ruler
set hlsearch
set showmatch
set autoindent
set smartindent
set showcmd
set cursorline
set foldcolumn=1
syntax on

"Uncomment if you have this colorscheme from
"https://github.com/christophermca/meta5 
"colorscheme meta5

if has('mouse')
	set mouse=a
endif
